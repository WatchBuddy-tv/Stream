{% extends "_html_taban.html.j2" %}


{% block breadcrumbs %}
<nav class="breadcrumbs">
    <div class="breadcrumbs-item">
        <a href="/" class="breadcrumbs-link"><i class="fas fa-home"></i> <span data-i18n="nav_home">{{ tr('nav_home') }}</span></a>
    </div>
    <div class="breadcrumbs-item">
        <a href="/eklenti/{{ eklenti_adi }}{{ provider_query }}" class="breadcrumbs-link">{{ provider_name }} - {{ eklenti_adi }}</a>
    </div>
    <div class="breadcrumbs-item">
        <span class="breadcrumbs-current unquote">{{ kategori_adi }}</span>
    </div>
</nav>
{% endblock %}


{% block icerik %}

<div class="detail-container">
    <div class="detail-header card-header-style">
        <div class="header-top">
            <div class="header-content">
                <h1 class="detail-title">{{ baslik }}</h1>
                <p class="detail-subtitle" data-i18n="page_label_with_number" data-i18n-vars='{"page": "{{ sayfa }}"}'>{{ tr('page_label_with_number', page=sayfa) }}</p>
            </div>
            <div class="header-actions">
                <a href="/eklenti/{{ eklenti_adi }}{{ provider_query }}" class="button button-secondary">
                    <i class="fas fa-arrow-left"></i> <span data-i18n="back_to_plugin">{{ tr('back_to_plugin') }}</span>
                </a>
            </div>
        </div>
    </div>

    <div class="grid">
        {% if items %}
            {% for item in items %}
                <a href="/icerik/{{ eklenti_adi }}?url={{ item.url }}{{ provider_query_amp }}" class="card">
                    {% if item.poster %}
                        <img src="{{ item.poster }}" alt="{{ item.title }}" class="card-image">
                    {% endif %}

                    <div class="card-content">
                        <h3 class="card-title">{{ item.title }}</h3>
                    </div>
                </a>
            {% endfor %}
        {% else %}
            <div style="grid-column: 1 / -1; text-align: center;">
                <p data-i18n="category_empty">{{ tr('category_empty') }}</p>
            </div>
            <a href="/eklenti/{{ eklenti_adi }}" class="button button-secondary">
                <i class="fas fa-arrow-left"></i> <span data-i18n="back_to_plugin_page">{{ tr('back_to_plugin_page') }}</span>
            </a>
        {% endif %}
    </div>

    {% if items %}
        <div style="display: flex; justify-content: space-between; margin-top: 2rem;">
            {% if sayfa > 1 %}
                <a href="/kategori/{{ eklenti_adi }}?kategori_url={{ kategori_url }}&kategori_adi={{ kategori_adi }}&sayfa={{ sayfa - 1 }}{{ provider_query_amp }}" class="button button-secondary">
                    <i class="fas fa-arrow-left"></i> <span data-i18n="prev_page">{{ tr('prev_page') }}</span>
                </a>
            {% else %}
               <div></div>
            {% endif %}

            <a href="/kategori/{{ eklenti_adi }}?kategori_url={{ kategori_url }}&kategori_adi={{ kategori_adi }}&sayfa={{ sayfa + 1 }}{{ provider_query_amp }}" class="button">
                <span data-i18n="next_page">{{ tr('next_page') }}</span> <i class="fas fa-arrow-right"></i>
            </a>

        </div>
    {% endif %}
</div>

{% endblock %}
